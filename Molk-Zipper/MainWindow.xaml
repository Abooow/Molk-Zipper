            </Button>
            <Label Grid.Column="1" Grid.Row="2" Content="asdasdasd" Padding="0" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Segoe UI"></Label>
            
            <Button Grid.Column="3" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="2" BorderBrush="#602482" Style="{DynamicResource BtnCornerRad}" >
