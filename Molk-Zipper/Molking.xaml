        <ed:Arc ArcThickness="5" Grid.RowSpan="3" ArcThicknessUnit="Pixel" HorizontalAlignment="Center" Height="192" Stretch="None" Stroke="Black" StartAngle="0" VerticalAlignment="Center" Width="192" Margin="252,165,256,103" Fill="#FFCB08C2" StrokeThickness="0" EndAngle="360"/>
        <Ellipse Fill="Black"  Grid.RowSpan="2" HorizontalAlignment="Left" Height="114" Stroke="Black" VerticalAlignment="Top" Width="120" Margin="290,204,0,0" StrokeThickness="0"/>
    </Grid>

</Page>
