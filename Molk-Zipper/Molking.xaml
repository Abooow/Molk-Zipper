<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Molk_Zipper"
      xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Molk_Zipper.Molking"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="700"
      Title="Molking">
    <Grid Background="#171717">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.378*"/>
            <RowDefinition Height="2.232*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Assets/Logo/Group_1@3x.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="12,0,0,24"></Image>
        <!--<Image Source="Assets/molking.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" d:IsHidden="True" />-->
        <Ellipse x:Name="background" Grid.RowSpan="2" Fill="#FF424242" HorizontalAlignment="Left" Height="192" Stroke="Black" VerticalAlignment="Top" Width="192" Margin="252,165,0,0" StrokeThickness="0"/>
