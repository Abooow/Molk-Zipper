<Page x:Class="Molk_Zipper.Molker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Molk_Zipper"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Molk_page1"
      Loaded="OnWindowLoaded">

    <Grid>
        <DockPanel Margin="1" >
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New"/>
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Save"/>
                    <MenuItem Header="_Save As"/>
                    <Separator />
                    <MenuItem Header="_Exit" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Command="Cut" />
                    <MenuItem Command="Copy" />
                    <MenuItem Command="Paste" />
                </MenuItem>
                <MenuItem Header="Format">
                    <MenuItem Header="Word Wrap" IsCheckable="True"/>
                    <MenuItem Header="Font"/>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="Zoom"/>
                </MenuItem>

                <MenuItem Header="Help">
                    <MenuItem Header="About"/>
                </MenuItem>

            </Menu>
            <Menu BorderThickness="1" HorizontalAlignment="Stretch" BorderBrush="Black" DockPanel.Dock="Top" Height="45">
                <Button x:Name="btn_Add" Content="Add" Width="77" Height="35" Click="Btn_Add_Click"/>
                <Button x:Name="btn_Molk" Content="Molk" Width="77" Height="35"/>
                <Button x:Name="btn_UnMolk" Content="UnMolk" Width="77" Height="35"/>
            </Menu>
            <TreeView x:Name="FolderView" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" KeyDown="FolderView_KeyDown" ScrollViewer.CanContentScroll="True">
                <TreeView.Resources>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="20" Margin="3" Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TreeViewItem}}, Path=Tag, Converter={x:Static local:HeaderToImageConverter.Instance}}"></Image>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.Resources>
            </TreeView>
            <!--<TextBlock DockPanel.Dock="Bottom" x:Name="textblockBottom" HorizontalAlignment="Left" Width="398" TextWrapping="Wrap" Text="" Height="20"/>
            <TextBlock x:Name="txtBox_Main" Margin="0" DockPanel.Dock="Top" ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                     TextWrapping="NoWrap" Text="" ContextMenuOpening="Written_text_ContextMenuOpening" Height="209"/>-->
        </DockPanel>

    </Grid>
</Page>
